#!/usr/bin/env bash

# This script configures an Ubuntu machine to return a custom 404 page with the message "Ceci n'est pas une page" when a page is not found.

# Step 1: Create the custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null

# Step 2: Modify the Nginx configuration to use the custom 404 page
sudo bash -c 'cat <<EOT >> /etc/nginx/sites-available/default

error_page 404 /404.html;
location = /404.html {
    root /var/www/html;
    internal;
}
EOT'

# Step 3: Test the Nginx configuration for syntax errors
sudo nginx -t

# Step 4: Restart Nginx to apply the changes
sudo systemctl restart nginx
